<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tab_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_height"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/margin_panding_long"
        android:paddingRight="@dimen/margin_panding_long"
        android:visibility="gone"/>

    <!--标题-->
    <TextView
        android:id="@+id/tv_media_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_panding_long"
        android:paddingRight="@dimen/margin_panding_long"
        android:singleLine="true"
        android:text="@string/test_show"
        android:textColor="@color/tab_sliding"
        android:textSize="@dimen/font_default"
        android:visibility="visible"/>

    <!--右上角数字角标-->
    <TextView
        android:id="@+id/tv_unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_mini"
        android:text="@string/test_show"
        android:gravity="center"
        android:layout_alignRight="@id/tv_media_name"
        android:layout_marginTop="@dimen/margin_panding_fartshort"
        android:textColor="@color/font_whiter"
        android:background="@drawable/tab_notification_bg"
        android:visibility="gone"/>
</RelativeLayout>