<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_panding"
        android:gravity="center"
        android:background="@color/font_whiter"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_search_tv"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/iv_search_list_delete"
        android:layout_width="@dimen/margin_short"
        android:layout_height="@dimen/margin_short"
        android:src="@mipmap/search_delete"
        />

    </LinearLayout>
    <View
       style="@style/all_page_line"/>
</LinearLayout>